{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "./",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"],
      "@user/*": ["./src/modules/user/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "exclude": ["src/__tests__"]
}
